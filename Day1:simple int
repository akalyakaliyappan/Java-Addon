public class SimpleInterestCalculator {
    public static void main(String[] args) {
        // Inputs
        double principal = 1000;
        double rate = 5;  // rate is given but not used in the formula
        int time = 2;

        // Calculate simple interest using SI = (P * P * T) / 100
        double simpleInterest = (principal * principal * time) / 100;

        // Output the result
        System.out.println("Principal: " + principal);
        System.out.println("Rate: " + rate + "%");
        System.out.println("Time: " + time + " years");
        System.out.println("Simple Interest (SI) = (P * P * T) / 100 = " + simpleInterest);
    }
}

